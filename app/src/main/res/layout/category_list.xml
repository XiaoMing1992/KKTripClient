<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_list_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/category_list_layout_height"
    android:background="@drawable/category_list_layout_selector"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/category_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:alpha="0.8"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="@string/category_list_name"
        android:textColor="@drawable/category_list_name_color_selector"
        android:textSize="@dimen/category_list_name_size" />

</RelativeLayout>