    <!--android:layout_marginTop="@dimen/setting_item_login_marginTop"-->
    <RelativeLayout
        android:id="@+id/setting_login"
        android:layout_width="@dimen/setting_item_layout_width"
        android:layout_height="@dimen/setting_item_layout_height"
        android:background="@drawable/my_setting_item_bg"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <ImageView
            android:id="@+id/img_setting_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_item_icon_marginRight"
            android:src="@drawable/setting_login_unfocus" />

        <TextView
            android:id="@+id/setting_user_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_item_title_marginLeft"
            android:gravity="start|center_vertical"
            android:text="@string/setting_login"
            android:textColor="@color/other"
            android:textSize="@dimen/default_24_sp" />

        <TextView
            android:id="@+id/setting_user_status"
            android:layout_width="@dimen/setting_item_hint_width"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_item_title_marginRight"
            android:layout_toLeftOf="@+id/img_setting_login"
            android:alpha="0.8"
            android:gravity="end|center_vertical"
            android:textColor="@color/other"
            android:textSize="@dimen/default_20_sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_version"
        android:layout_width="@dimen/setting_item_layout_width"
        android:layout_height="@dimen/setting_item_layout_height"
        android:layout_marginTop="@dimen/setting_item_marginTop"
        android:background="@drawable/my_setting_item_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:visibility="gone">

        <ImageView
            android:id="@+id/img_setting_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_item_icon_marginRight"
            android:src="@drawable/setting_version_unfocus" />

        <TextView
            android:id="@+id/tv_setting_version"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_item_title_marginLeft"
            android:gravity="start|center_vertical"
            android:text="@string/setting_version"
            android:textColor="@color/other"
            android:textSize="@dimen/default_24_sp" />

        <TextView
            android:id="@+id/setting_update_status"
            android:layout_width="@dimen/setting_item_hint_width"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_item_title_marginRight"
            android:layout_toLeftOf="@+id/img_setting_version"
            android:alpha="0.8"
            android:gravity="end|center_vertical"
            android:textColor="@color/other"
            android:textSize="@dimen/default_20_sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/setting_about"
        android:layout_width="@dimen/setting_item_layout_width"
        android:layout_height="@dimen/setting_item_layout_height"
        android:layout_marginTop="@dimen/setting_item_marginTop"
        android:background="@drawable/my_setting_item_bg"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_setting_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_item_icon_marginRight"
            android:src="@drawable/setting_about_unfocus" />

        <TextView
            android:id="@+id/tv_setting_about"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_item_title_marginLeft"
            android:gravity="start|center_vertical"
            android:text="@string/setting_info"
            android:textColor="@color/other"
            android:textSize="@dimen/default_24_sp" />

        <TextView
            android:id="@+id/setting_info_hint"
            android:layout_width="@dimen/setting_item_hint_width"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_item_title_marginRight"
            android:layout_toLeftOf="@+id/img_setting_about"
            android:alpha="0.8"
            android:gravity="end|center_vertical"
            android:text="@string/setting_info_description"
            android:textColor="@color/other"
            android:textSize="@dimen/default_20_sp" />

    </RelativeLayout>

</LinearLayout>