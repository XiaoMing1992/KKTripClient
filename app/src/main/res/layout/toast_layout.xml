<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toast_bg"
    android:paddingBottom="@dimen/toast_layout_padding_bottom"
    android:paddingEnd="@dimen/toast_layout_padding_horizontal"
    android:paddingStart="@dimen/toast_layout_padding_horizontal"
    android:paddingTop="@dimen/toast_layout_padding_top">

    <TextView
        android:id="@+id/toast_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="@color/toast_text"
        android:textSize="@dimen/toast_layout_text_size" />
</RelativeLayout>