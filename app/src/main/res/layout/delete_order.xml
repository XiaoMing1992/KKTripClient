<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/delete_order_bg"
    android:gravity="right"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/manage_order_item_delete_layout_width"
        android:layout_height="match_parent"
        android:background="@drawable/delete_order_toast_bg"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cancel"
            android:layout_width="@dimen/manage_order_item_delete_width"
            android:layout_height="@dimen/manage_order_item_delete_height"
            android:layout_marginLeft="@dimen/manage_order_item_delete_marginLeft"
            android:layout_marginRight="@dimen/manage_order_item_delete_marginRight"
            android:alpha="0.3"
            android:background="@drawable/delete_order_select_bg"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/order_cancel"
            android:textColor="@color/order_color2"
            android:textSize="@dimen/default_20_sp" />

        <TextView
            android:id="@+id/delete"
            android:layout_width="@dimen/manage_order_item_delete_width"
            android:layout_height="@dimen/manage_order_item_delete_height"
            android:layout_marginLeft="@dimen/manage_order_item_delete_marginLeft"
            android:layout_marginRight="@dimen/manage_order_item_delete_marginRight"
            android:layout_marginTop="@dimen/manage_order_item_delete_marginTop"
            android:alpha="0.3"
            android:background="@drawable/delete_order_select_bg"
            android:focusable="true"
            android:gravity="center"
            android:text="@string/order_delete"
            android:textColor="@color/order_color2"
            android:textSize="@dimen/default_20_sp" />
    </LinearLayout>

</LinearLayout>