<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/manage_order_item_width"
    android:layout_height="@dimen/manage_order_item_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/manage_order_bg"
    android:focusable="true"
    android:gravity="center">

    <TextView
        android:id="@+id/order_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/manage_order_item_order_number_marginLeft"
        android:alpha="0.8"
        android:gravity="left|center"
        android:text=""
        android:textColor="@color/order_color1"
        android:textSize="@dimen/default_20_sp" />

    <RelativeLayout
        android:id="@+id/order_info"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/manage_order_item_info_layout_marginLeft"
        android:gravity="center">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img"
            android:layout_width="@dimen/manage_order_item_info_layout_img_width"
            android:layout_height="@dimen/manage_order_item_info_layout_img_height"
            android:gravity="left|center"
            android:scaleType="fitXY"
            app:riv_corner_radius="4dp"
            />

        <TextView
            android:id="@+id/goods_name"
            android:layout_width="@dimen/manage_order_item_info_layout_tv_width"
            android:layout_height="@dimen/manage_order_item_info_layout_tv_height"
            android:layout_marginLeft="@dimen/manage_order_item_info_layout_tv_marginLeft"
            android:layout_toRightOf="@+id/img"
            android:alpha="0.8"
            android:gravity="left|center"
            android:text=""
            android:textColor="@color/order_color1"
            android:textSize="@dimen/default_20_sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/manage_order_item_amount_marginLeft"
        android:alpha="0.8"
        android:gravity="left|center"
        android:text=""
        android:textColor="@color/order_color1"
        android:textSize="@dimen/default_20_sp" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/manage_order_item_price_marginLeft"
        android:alpha="0.8"
        android:gravity="left|center"
        android:text=""
        android:textColor="@color/order_color1"
        android:textSize="@dimen/default_20_sp" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/manage_order_item_state_marginLeft"
        android:alpha="0.8"
        android:gravity="left|center"
        android:text=""
        android:textColor="@color/order_color1"
        android:textSize="@dimen/default_20_sp" />
</RelativeLayout>