<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/video_load_bg_big"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/empty_collect" />

    <TextView
        android:id="@+id/error_video_txt_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/error_title_margin_top"
        android:alpha="0.8"
        android:text="@string/error_no_network"
        android:textColor="@color/main_primary"
        android:textSize="@dimen/error_title_size" />
</LinearLayout>